    .bootstrap-select:not([class*="col-"]):not([class*="form-control"]):not(.input-group-btn) {
        width: 620px;
    }

</style>

@{
    ViewBag.Title = "SelectCriteria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_Progress")

<h3>Step 2: Tell us about your App</h3>

@using (Html.BeginForm("ValidationPlan", "Home", FormMethod.Post))
{
    <div class="form-box">

        <div class="form-group">
            Specify your Android APP Name:
            <br/>
            @Html.TextBox("AppName", "" ,new { @class = "input-large", type = "text", required = "required" })
        </div>

        <div class="form-group">
            Select which category your App belongs to:
            <br />
            @Html.ListBox("category", new SelectList(ViewBag.CatgoryList), new { @class = "selectpicker" })
        </div>


        <div class="form-group">
            Select which domain your App belongs to:
            <br />
            @Html.ListBox("domain", new SelectList(ViewBag.DomainList), new { @class = "selectpicker" })

            @*<select id="domain" name="domain" class="selectpicker" multiple>
                    <option>Input</option>
                    <option>Registration</option>
                    <option>Login</option>
                </select>*@
        </div>
    </div>
   
        <p align="right">
            <input type="submit" name="Submit" id="Submit" value="Next" class="btn btn-primary btn-large" />
        </p>

    }

    <script type="text/javascript">

        $(".step1").removeClass("active");
        $(".step1").addClass("activated");

        $(".step2").addClass("active");

        $(".f1-progress-line").css("width", "50%");

    </script>

