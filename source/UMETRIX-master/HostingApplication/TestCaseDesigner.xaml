<Window x:Class="HostingApplication.TestCaseDesigner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestCaseDesigner"  Width="900" Height="900" WindowState="Maximized">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem  Header="_New" Click="MenuItemNew_Click"  />
                <MenuItem Header="_Open" Click="MenuItemOpen_Click"  />
                <MenuItem Header="_Save" Click="MenuItemSave_Click" />
            </MenuItem>
        </Menu>

        <Grid Name="grid1"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition  />
            </Grid.ColumnDefinitions>

        </Grid>



    </DockPanel>
</Window>
