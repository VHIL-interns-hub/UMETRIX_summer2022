@{
    ViewBag.Title = "UMETRIX";
}

@Html.Partial("_Progress")

<div class="row">
<h3>Step 1:  Upload your Android APK file in debug mode</h3>

    @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <br/>
        <input type="file" name="file" class="file" />
        <br/>
    <input type="submit" name="Submit" id="Submit1" onclick="SetIsExecutingValidationPlan();" value="Upload APK" class="btn btn-primary btn-large" />
        <br/>
    }

    
    @if(ViewBag.FileUploadStatus!=null)
    { 
        <br/>
        <p style="padding:15px;" class="bg-success">@ViewBag.FileUploadStatus</p>
    }
    
        @using (Html.BeginForm("SelectCriteria", "Home", FormMethod.Post))
    {
        <p align="right">
            <input type="submit" name="Submit" id="Submit2"  value="Next" class="btn btn-primary btn-large" />
        </p>
    }
</div>

<script type="text/javascript">

    function SetIsExecutingValidationPlan() {
        document.getElementById("Submit1").disabled = true;
        document.getElementById("Submit1").value = "Decompiling APK. Please Wait...";

    }

</script>





