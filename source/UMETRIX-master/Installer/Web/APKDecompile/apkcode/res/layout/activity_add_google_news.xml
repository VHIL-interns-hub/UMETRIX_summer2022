<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/view_toolbar" />
    <ScrollView android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/button_layout" android:layout_below="@id/toolbar">
        <LinearLayout android:orientation="vertical" android:padding="20.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textAppearance="?android:textAppearanceMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15.0dip" android:text="@string/google_news_indicator" />
            <CheckBox android:id="@id/cb_top_stories" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/google_news_top_stories" />
            <CheckBox android:id="@id/cb_world" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/google_news_world" />
            <CheckBox android:id="@id/cb_business" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/google_news_business" />
            <CheckBox android:id="@id/cb_technology" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/google_news_technology" />
            <CheckBox android:id="@id/cb_entertainment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/google_news_entertainment" />
            <CheckBox android:id="@id/cb_sports" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/google_news_sports" />
            <CheckBox android:id="@id/cb_science" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/google_news_science" />
            <CheckBox android:id="@id/cb_health" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/google_news_health" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:gravity="right" android:id="@id/button_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" style="?android:attr/buttonBarStyle">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@android:string/cancel" android:onClick="onClickCancel" style="?android:attr/buttonBarButtonStyle" />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@android:string/ok" android:onClick="onClickOk" style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</RelativeLayout>