<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RadioGroup android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip">
        <RadioButton android:textColor="#ff669900" android:id="@id/acceptRadio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/accept" />
        <RadioButton android:textColor="#ffcc0000" android:id="@id/rejectRadio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/reject" />
    </RadioGroup>
    <EditText android:id="@id/filterText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip">
        <requestFocus />
    </EditText>
    <CheckBox android:id="@id/regexCheckBox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/filter_is_regex" />
    <RadioGroup android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip">
        <RadioButton android:id="@id/applyTitleRadio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/filter_apply_to_title" />
        <RadioButton android:id="@id/applyContentRadio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/filter_apply_to_content" />
    </RadioGroup>
</LinearLayout>